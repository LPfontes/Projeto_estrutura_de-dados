/* Frame Central da Tela de Menu */
QFrame {
position: absolute;
background-color: rgba(38, 141, 154, 0.45);
border-radius: 20px;
}

QFrame#frameValorRemovido {
    background-color: none;
    weight: 240px;
    height: 30px;
}

/* Titulo do Menu */
QLabel {
font-family: "Courier New";
font-weight: bold;
font-size: 30px;
color: #ADADAD;
background-color: none;
}

/* Padrão para TODOS os botões */
QPushButton {
font-family: "Comic Sans MS";
font-style: normal;
font-weight: 400;
font-size: 15px;
line-height: 18px;
text-align: center;
border-radius: 20px;

color: #FFFFFF;
}

QPushButton#buttonListaSeq {
	text-color : #63d0e7;
	background-color: #5edbaf;
    border-style: outset;
    border-width: 2px;
    border-color: beige;
}

QPushButton#buttonListaSeq:hover {
    background-color: #15e99d; /* Cor de fundo quando o mouse passa por cima */
    cursor: pointer; /* Transforma o cursor em uma mãozinha ao passar por cima */
}

QPushButton#buttonLSE {
	text-color : #62e7ca;
	background-color: #5edbaf;
    border-style: outset;
    border-width: 2px;
    border-color: beige;
}

QPushButton#buttonLSE:hover {
    background-color: #15e99d; /* Cor de fundo quando o mouse passa por cima */
    cursor: pointer; /* Transforma o cursor em uma mãozinha ao passar por cima */
}


QPushButton#buttonLDE {
	text-color : #60dbad;
	background-color: #5edbaf;
    border-style: outset;
    border-width: 2px;
    border-color: beige;
}

QPushButton#buttonLDE:hover {
    background-color: #15e99d; /* Cor de fundo quando o mouse passa por cima */
    cursor: pointer; /* Transforma o cursor em uma mãozinha ao passar por cima */
}

QPushButton#pushButtonVoltar {
    width: 50px;
    height: 50px;
    border-radius: 40px;
    background-color: #007bff; /* Cor de fundo do botão */
    color: #fff; /* Cor do texto do botão */
    font-size: 16px; /* Tamanho da fonte do texto do botão */
    text-align: center; /* Centralizar o texto vertical e horizontalmente */
    line-height: 50px; /* Centralizar o texto verticalmente */
    border: none; /* Remover a borda do botão */
    cursor: pointer; /* Alterar o cursor do mouse para ponteiro ao passar sobre o botão */
} 

